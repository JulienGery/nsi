    for(auto &j: morse){
      if(j[0] == String(i)){
        for(auto &h : j[1]){
          digitalWrite(LEDVERTE, HIGH);
          h == '-'? delay(2000): delay(500);
          digitalWrite(2, LOW);
          delay(200);
        }
      }
    }
  }
}